# Dockerfile para BUILD - usa imagem da Axway existente
FROM docker.repository.axway.com/apigateway-docker-prod/7.7/gateway:7.7.0.20230830-4-BN0005-ubi7

# Definir variáveis de ambiente
ENV AXWAY_HOME=/opt/Axway
ENV JAVA_HOME=/usr/lib/jvm/java-11-openjdk-11.0.23.0.9-2.el7_9.x86_64
ENV PATH=$JAVA_HOME/bin:$PATH

# Instalar dependências necessárias para build
USER root
RUN yum update -y && \
    yum install -y \
    wget \
    unzip \
    tar \
    gzip \
    java-11-openjdk \
    java-11-openjdk-devel \
    git \
    && yum clean all

# Configurar Java 11 como padrão
RUN alternatives --set java java-11-openjdk.x86_64 && \
    alternatives --set javac java-11-openjdk.x86_64

# Instalar Gradle
RUN curl -O https://downloads.gradle.org/distributions/gradle-7.6-bin.zip && \
    unzip gradle-7.6-bin.zip -d /opt && \
    ln -s /opt/gradle-7.6/bin/gradle /usr/local/bin/gradle && \
    rm gradle-7.6-bin.zip

# Copiar o instalador da Axway
COPY APIGateway_7.7.20230830_Install_linux-x86-64_BN03.run /tmp/

# Instalar Axway Gateway com Policy Studio
RUN /tmp/APIGateway_7.7.20230830_Install_linux-x86-64_BN03.run \
    --enable-components policystudio,configurationstudio \
    --disable-components nodemanager,cassandra,apigateway,qstart,agentsConfiguration,apimgmt,analytics,packagedeploytools \
    --setup_type advanced \
    --unattendedmodeui none \
    --prefix '/opt/Axway' \
    --debuglevel 4 \
    --mode unattended \
    --acceptGeneralConditions yes

# Criar diretório de trabalho
WORKDIR /workspace

# Copiar código fonte
COPY . .

RUN rm /tmp/APIGateway_7.7.20230830_Install_linux-x86-64_BN03.run

# Comando para build
CMD ["gradle", "buildJarLinux"] 